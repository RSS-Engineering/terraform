resource "aws_guardduty_detector" "detector" {
  enable = true

  datasources {
    s3_logs {
      enable = true
    }
    kubernetes {
      audit_logs {
        enable = false
      }
    }
    malware_protection {
      scan_ec2_instance_with_findings {
        ebs_volumes {
          enable = false
        }
      }
    }
    # rds protection not yet manageable by terraform
    # and is enabled by default
  }
}
